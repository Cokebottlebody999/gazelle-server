{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "*": [ // This just means that any import will follow these resolution rules
        "*", // Imports will be resolved from the root directory
        "src/*", // Imports will be resolved from the src directory
      ]
    },
    "allowJs": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "noEmit": true, // We use babel for compilation, we only use TS for type checking
    "pretty": true,
    "jsx": "preserve",
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
